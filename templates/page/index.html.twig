{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Articles récents</h1>

{% for post in posts %}
    <article>
        <h2><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></h2>
        <p>{{ post.content[:150] ~ '...' }}</p>
    </article>
{% else %}
    <p>Aucun article trouvé.</p>
{% endfor %}

{% endblock %}
